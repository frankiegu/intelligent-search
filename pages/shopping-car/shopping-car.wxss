.shopping-car {
    padding: 15rpx 10rpx;
    margin-bottom: 90rpx;    
    box-sizing: border-box;
    background: #f0f2f5;
}

.shopping-car_module {
    margin-bottom: 15rpx;
}

.i-checkbox,
.i-checkbox-select {
    width: 36rpx;
    height: 36rpx;
}

.footer {
    background: #fff;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    align-content: center;
    align-items: center;
    align-self: center;
}

.button-computed {
    width: 200rpx;
    background: #f02b2b;
    border-radius: 40rpx;
    color: #fff;
    text-align: center;
    padding: 10rpx 0;
    margin-right: 20rpx;
}

.sale-price {
    color: #f02b2b;
}

.total {
    margin-left: 230rpx;
}

.product-icon {
    margin-left: 35rpx;
}